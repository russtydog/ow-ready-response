@page "/Administration/Stripe/Products/Subscribe/{id?}"
@model MyEF2.WebApp.Pages.Administration.Stripe.Products.SubscribeModel
@{
    ViewData["Title"] = "Stripe Subscribe";
    Layout = "_GeneralLayout";
}
<form method="post">
<div class="content-wrapper" style="margin-left:0px">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@Model.StripeProduct.Name</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="../../../../">Home</a></li>
                        <li class="breadcrumb-item active">@Model.StripeProduct.Name</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <h3 class="d-inline-block d-sm-none">@Model.StripeProduct.Description</h3>
                        <div class="col-12">
                            <img src="../../../../dist/img/Logo.png" class="product-image" alt="Product Image">
                        </div>
                        
                    </div>
                    <div class="col-12 col-sm-6">
                        <h3 class="my-3">@Model.StripeProduct.Description</h3>
                        <p>Features..</p>

                        <hr>
                        

                        <div class="bg-gray py-2 px-3 mt-4">
                            <h2 class="mb-0">
                                $@Model.StripeProduct.Amount.ToString("N2")
                            </h2>
                            <h4 class="mt-0">
                                <small>Per @Model.StripeProduct.Frequency </small>
                            </h4>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-success btn-lg btn-flat">
                                <i class="fas fa-cart-plus fa-lg mr-2"></i>
                                Subscribe
                            </button>

                        </div>

                       

                    </div>
                </div>
                <div class="row mt-4">
                    <nav class="w-100">
                        <div class="nav nav-tabs" id="product-tab" role="tablist">
                            <a class="nav-item nav-link active" id="product-desc-tab" data-toggle="tab" href="#product-desc" role="tab" aria-controls="product-desc" aria-selected="true">Description</a>
                        </div>
                    </nav>
                    <div class="tab-content p-3" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="product-desc" role="tabpanel" aria-labelledby="product-desc-tab"> 
                            @Model.StripeProduct.Description
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
</form>