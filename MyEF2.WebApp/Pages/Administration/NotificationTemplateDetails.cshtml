@page "/Administration/NotificationTemplateDetails/{id?}"
@model MyEF2.WebApp.Pages.Administration.NotificationTemplateDetailsModel
@{
}
<div class="col-md-6">
    <!-- general form elements -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Product Details</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post">
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="NotificationTemplate.TemplateHTML" />
                <input type="hidden" asp-for="NotificationTemplate.TemplateJson" />
                <div class="form-group">
                    <label for="txtTemplateName" asp-for="NotificationTemplate.TemplateName">Template Name</label>
                    <input type="text" asp-for="NotificationTemplate.TemplateName" class="form-control" id="txtTemplateName" placeholder="Template Name">
                    <br />
                    <button type="submit" class="btn btn-success" asp-page-handler="TemplateDesigner">Template Designer</button>
                    
                </div>
                <div class="form-group">
                    <label>Notification Template:</label>
                    <input type="checkbox" style="width:40px" class="form-control" asp-for="NotificationTemplate.IsEmailNotificationTemplate" />
                </div>
            </div>
            <div class="card-footer">
                <br>
                <button type="submit" class="btn btn-success" name="action" value="submit">Save</button>
                @if (Model.Id != null)
                {
                    @* <button type="submit" class="btn btn-default" name="action" value="delete">Delete</button> *@
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-delete">
                  Delete
                </button>
                }
                <a class="btn btn-default" href="~/Administration/NotificationTemplates">Back</a>
            </div>

            <div class="modal fade" id="modal-delete">
                <div class="modal-dialog modal-delete">
                <div class="modal-content">
                    <div class="modal-header">
                    <h4 class="modal-title">Delete Confirmation</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                    <p>Are you sure you wish to delete this record? This cannot be recovered if you confirm.&hellip;</p>
                    </div>
                    <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success" name="action" value="delete">Delete Confirm</button>
                    </div>
                </div>
                <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->
        </form>

        <!-- form end -->
    </div>
</div>
<!-- /.card -->