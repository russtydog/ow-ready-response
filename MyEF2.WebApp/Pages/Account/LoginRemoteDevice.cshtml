@page "/Account/LoginRemoteDevice/{id?}"
@model MyEF2.WebApp.Pages.Account.LoginRemoteDeviceModel
@{
    ViewData["Title"] = "Login Remote Device";
    Layout = "_GeneralBlockLayout";
}

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        Enter the code displayed on the remote device screen.
    </div>
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Login Code" asp-for="LoginCode"  oninput="this.value = this.value.toUpperCase()" maxlength="6"/>
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    

    <div class="mb-3">
        <button type="submit" class="btn btn-success btn-block">Login</button>
    </div>

</form>